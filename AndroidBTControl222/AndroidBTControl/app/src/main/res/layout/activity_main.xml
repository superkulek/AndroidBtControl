<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >



    <TextView
        android:id="@+id/info"
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/status"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/pairedlist"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="visible"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/inputpane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <EditText
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/send"
                android:layout_below="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WyÅ›lij" />

            <Button
                android:id="@+id/newactivity"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/send"
                android:text="Inne zmienne" />
            <Button
                android:id="@+id/database"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/newactivity"
                android:text="Database" />

            <Button
                android:id="@+id/dd1"
                android:layout_below="@+id/database"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="Q1" />

            <Button
                android:id="@+id/dd2"
                android:layout_toRightOf="@+id/dd1"
                android:layout_below="@+id/database"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="Q2" />
            <Button
                android:id="@+id/dd3"
                android:layout_toRightOf="@+id/dd2"
                android:layout_below="@+id/database"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="Q3" />
            <Button
                android:id="@+id/dd4"
                android:layout_toRightOf="@+id/dd3"
                android:layout_below="@+id/database"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="Q4" />
            <Button
                android:id="@+id/dd5"
                android:layout_toRightOf="@+id/dd4"
                android:layout_below="@+id/database"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="Q5" />
            <Button
                android:id="@+id/dd6"
                android:layout_toRightOf="@+id/dd5"
                android:layout_below="@+id/database"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="Q6" />
            <Button
                android:id="@+id/dd7"
                android:layout_toRightOf="@+id/dd6"
                android:layout_below="@+id/database"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="Q7" />
            <Button
                android:id="@+id/dd8"
                android:layout_toRightOf="@+id/dd7"
                android:layout_below="@+id/database"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="Q8" />
            <Button
                android:id="@+id/ddd1"
                android:layout_below="@+id/dd1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="I1" />
            <Button
                android:id="@+id/ddd2"
                android:layout_below="@+id/dd2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ddd1"
                android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="I2" />
            <Button
                android:id="@+id/ddd3"
                android:layout_below="@+id/dd3"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ddd2"
                android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="I3" />
            <Button
                android:id="@+id/ddd4"
                android:layout_below="@+id/dd4"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ddd3"
                android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="I4" />
            <Button
                android:id="@+id/ddd5"
                android:layout_below="@+id/dd5"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ddd4"
                android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="I5" />
            <Button
                android:id="@+id/ddd6"
                android:layout_below="@+id/dd6"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ddd5"
                android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="I6" />
            <Button
                android:id="@+id/ddd7"
                android:layout_below="@+id/dd7"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ddd6"
                android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="I7" />
            <Button
                android:id="@+id/ddd8"
                android:layout_below="@+id/dd8"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ddd7"
                android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_red_light"
                android:text="I8" />

            <TextView
                android:id="@+id/ramka"
                android:layout_below="@+id/ddd5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="ramka"
                android:textSize="20dp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ramka"
                android:layout_marginTop="51dp"
                android:layout_toEndOf="@+id/ddd4"
                android:layout_toRightOf="@+id/ddd4"
                android:text="Odbior" />

                />

            <TextView
                android:id="@+id/counter"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/switch1"
                android:hint="..."
                android:textSize="20dp" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/counter"
                android:hint="..."
                android:textSize="20dp" />

            <TextView
                android:id="@+id/cartoons"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/temperature"
                android:hint="..."
                android:textSize="20dp" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph"
                android:layout_below="@id/cartoons"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </RelativeLayout>


    </ScrollView>
</LinearLayout>
